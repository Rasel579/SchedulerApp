<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchedulerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorControlHighlight</item>
        <item name="android:textColor">@color/white</item>
        <item name="toolbarStyle">@style/Theme.SchedulerApp.AppBarOverlay</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primaryDarkColor</item>
    </style>
    <style name="Theme.SchedulerApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Theme.SchedulerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="titleEnabled">true</item>
    </style>
    <style name="Theme.SchedulerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="BottomAppBar.TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:padding">50dp</item>
        <item name="background">@drawable/item_selector_bottom_navigation</item>
    </style>
    <style name="BottomNavigationView.Custom"
        parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/primaryLightColor</item>
    </style>
    <style name="ChipCustomNavigationItem" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipCornerRadius">15dp</item>
        <item name="chipIconSize">30dp</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="iconStartPadding">8dp</item>
    </style>
    <style name="CustomMaterialCardView" parent="Widget.MaterialComponents.CardView">
    </style>


</resources>