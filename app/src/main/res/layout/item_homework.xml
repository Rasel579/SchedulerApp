<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/primaryLightColor"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="40dp">
     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <TextView
             android:id="@+id/title_of_homework"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_marginStart="18dp"
             android:textSize="13dp"
             android:text="Literature"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             />
         <TextView
             android:id="@+id/left_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="1dp"
             android:layout_marginStart="10dp"
             android:drawableStart="@android:drawable/ic_menu_recent_history"
             android:gravity="center"
             app:layout_constraintTop_toBottomOf="@+id/title_of_homework"
             app:layout_constraintStart_toStartOf="parent"
             android:text="2 days left"/>
         <androidx.appcompat.widget.AppCompatImageView
             android:id="@+id/image"
             android:layout_width="50dp"
             android:layout_height="50dp"
             app:srcCompat="@android:drawable/ic_lock_idle_low_battery"
             android:scaleType="centerInside"
             android:layout_marginTop="30dp"
             android:layout_marginStart="80dp"
             android:layout_marginEnd="5dp"
             app:layout_constraintStart_toEndOf="@+id/title_of_homework"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:background="@drawable/image_background"
             />
         <TextView
             android:id="@+id/homework_task"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginStart="40dp"
             android:layout_marginEnd="20dp"
             app:layout_constraintTop_toBottomOf="@+id/left_time"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             xmlns:tools="http://schemas.android.com/tools"
             android:text="fvdvdvfdvdfvdfvdvdfvfdvdv"
             />
         <androidx.appcompat.widget.AppCompatImageView
             android:id="@+id/pupil"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/icon_pupal"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginStart="40dp"
             app:layout_constraintTop_toBottomOf="@id/homework_task"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"/>
         <androidx.appcompat.widget.AppCompatImageView
             android:id="@+id/pupil_next"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/icon_pupal"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginStart="30dp"
             android:padding="2dp"
             android:background="@drawable/image_background"
             app:layout_constraintTop_toBottomOf="@id/homework_task"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="@id/pupil"/>


     </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>